body {
	position: relative;
}

ul {
	padding: 0;
	margin: 0;
}

li {
	list-style-type: none;
	display: inline;
}

#button {
	position: relative;
	width: 32px;
	height: 32px;
	position: absolute;
	top: 300px;
	left: 300px;
}


/***
上方信息栏的初始化
***/
#info-bar {
	z-index: 1;
	opacity: 0;
	position: relative;
	height: 130px;
	position: absolute;
	left: -48px;
	top: -50px;
	transform: scale(0.1);
	overflow: hidden;
}

.info ul {
	position: relative;
	width: 100px;
	height: 100px;
	margin: 0;
	padding: 6px 0 0 20px;
}

.info {
	background-color: rgba(102, 102, 102, 1);
	width: 130px;
	height: 130px;
	border-radius: 50%;
	overflow: hidden;
}

.page_user {
	display: block;
	position: absolute;
	left: 40px;
}

.page_user span {
	font-size: 13pt;
	color: white;
	font-family: Verdana, sans-serif;
	margin-left: 10px;
	vertical-align: 8px;
}

.page_comment {
	display: block;
	position: absolute;
	top: 35px;
	padding-left: 10px;
	padding-top: 5px;
}

.page_comment span {
	font-size: 20pt;
	color: white;
	font-family: Verdana, sans-serif;
	margin-left: 10px;
	vertical-align: 5px;
}

.mine_posted {
	position: absolute;
	top: 83px;
}

.mine_posted span {
	font-size: 11pt;
	color: #079E6E;
	font-family: Verdana, sans-serif;
	font-weight: bold;
	vertical-align: 7px;
	padding-left: 5px;
}

.mine_like {
	position: absolute;
	top: 82px;
	left: 68px;
}

.mine_like span {
	font-size: 11pt;
	color: #079E6E;
	font-family: Verdana, sans-serif;
	font-weight: bold;
	vertical-align: 8px;
	padding-left: 7px;
}


/***
左下五个子按钮的初始化
***/
#control-ring-container {
	position: relative;
	height: 32px;
	width: 32px;
	position: absolute;
	left: 0;
	top: 0;
	opacity: 0;
}

.mask_button, .history_button, .message_button, .setting_button, .sign_button, .icon {
	width: 32px;
	height: 32px;
	background-color: rgba(102, 102, 102, 1);
	border-radius: 50%;
	position: absolute;
	left: 0;
	top: 0;
}

.mask_button img, .history_button img, .message_button img, .setting_button img, .sign_button img {    /*图片居中，适当缩小*/
	margin: 5px;
	transform: scale(0.8);
}

.message_button {
	position: relative;
}

.message_button span {    /*调整2的大小颜色字体，以及相对于message_button位置*/
	position: absolute;
	left: 23px;
	top:-5px;
	width: 18px;
	height: 18px;
	border-radius: 50%;
	background-color: red;
	color: white;
	font-family: Verdana, sans-serif;
	font-size: 10pt;
	text-align: center;
}


/***
at主按钮
***/
.apb {    /*调整在button中的位置*/
	position: absolute;
	top: 0;
	left: 0;
}

.icon {
	position: relative;
	transform: scale(0.8);
}

.icon img {
	width: 28px;
	height: 20px;
	position: absolute;
	top: 6px;
	left: 2px;
}

#atplus_green {
	opacity: 0;
}


/***
鼠标移开时的变化
***/
#atplus_white, #atplus_green {     /*子按钮都收回后，先迅速变回白色，再慢慢缩小*/
	transition: opacity 0s 1.2s cubic-bezier(1, 0, 1, 1), transform 0.4s 1.2s ease-in;
	-moz-transition: opacity 0s 1.2s cubic-bezier(1, 0, 1, 1), transform 0.4s 1.2s ease-in;
	-webkit-transition: opacity 0s 1.2s cubic-bezier(1, 0, 1, 1), transform 0.4s 1.2s ease-in;
}

.icon {
	transition: 0.4s 1.2s ease-in;    /*等待1.2s，子按钮都收回后再开始变化*/
	-moz-transition: 0.4s 1.2s ease-in;
	-webkit-transition: 0.4s 1.2s ease-in;
}

#info-bar, #control-ring-container, .mask_button, .history_button, .message_button, .setting_button, .sign_button {
 	transition: 0.6s 0.6s ease-in;
 	-moz-transition: 0.6s 0.6s ease-in;
 	-webkit-transition: 0.6s 0.6s ease-in;
 }


/***
鼠标指向时的变化（等待时间，变化时间均为0.5s）
***/
#button:hover #atplus_white {
	opacity: 0;
	transform: scale(0.8);    /*at图片的放大倍率比背景圈略小*/
	transition: 0.5s 0.5s ease-in;
}

#button:hover #atplus_green {
	opacity: 1;
	transform: scale(0.8);    /*at图片的放大倍率比背景圈略小*/
	transition: 0.5s 0.5s ease-in;
}

#button:hover .icon {
	transform: scale(1.5);
	background-color: rgba(48, 63, 159, 1);
	transition: 0.5s 0.5s ease-in;
}

#button:hover #info-bar {
	opacity: 1;
	transform: scale(1);
	transform: translateY(-95px);
	transition: 0.5s 0.5s ease-in;
}

#button:hover #control-ring-container {    /*左下5个子按钮的可见度的变化*/
	opacity: 1;
	transition: 0.5s 0.5s ease-in;
}

#button:hover .mask_button {    /*mask的位置的变化*/
	transform: translate3d(-62px, -32px, 0);
	transition: 0.5s 0.5s ease-in;
}

#button:hover .history_button {    /*history的位置的变化*/
	transform:  translate3d(-70px, 5px, 0);
	transition: 0.5s 0.5s ease-in;
}

#button:hover .message_button {    /*message的位置的变化*/
	transform:  translate3d(-56px, 40px, 0);
	transition: 0.5s 0.5s ease-in;
}

#button:hover .setting_button {    /*setting的位置的变化*/
	transform:  translate3d(-23px, 60px, 0);
	transition: 0.5s 0.5s ease-in;
}

#button:hover .sign_button {    /*sign的位置的变化*/
	transform:  translate3d(18px, 57px, 0);
	transition: 0.5s 0.5s ease-in;
}